<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<SearchView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/search_bar"/>-->

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_bar"
        android:layout_toLeftOf="@+id/results_title"
        android:layout_toStartOf="@+id/results_title"
        android:layout_alignBottom="@+id/search_query"></Spinner>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_query"
        android:hint="Search"
        android:lines="1"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/search_button"
        android:layout_toRightOf="@+id/search_bar"
        android:layout_toEndOf="@+id/search_bar" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/song_grid"
        android:id="@+id/search_button"
        android:text="Search"
        android:layout_alignBottom="@+id/search_query" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Searches"
        android:id="@+id/results_title"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_below="@+id/search_bar"
        android:layout_centerHorizontal="true" />
    <GridView
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/song_grid"
        android:layout_below="@id/results_title"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:numColumns="2"/>

</RelativeLayout>